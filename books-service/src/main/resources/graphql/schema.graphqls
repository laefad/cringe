type Query {
    # TAG 
    getTag(tagId: ID!): Tag
    getAllTags: [Tag!]
    # BOOK 
    getAllBooks: [Book!]
    getBook(bookId: ID!): Book
    # AUTHOR
    getAllAuthors: [Autho!]
}

type Mutation {
    # TAG
    deleteTag(tagId: ID!): Tag
    createTag(input: TagCreateInput!): Tag
    # BOOK
    createBook(input: BookCreateInput!): Book
    deleteBook(bookId: ID!): Book
    # AUTHOR
}

